<?xml version="1.0" encoding="utf-8"?>
<!--RASPRIT-->
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Button
        android:layout_width="385dp"
        android:layout_height="105dp"
        android:text="Compressor"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.20"
        android:background="@color/emerald"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:layout_row="0"
        android:layout_column="0"
        android:onClick="compressor" />

    <Button
        android:layout_width="387dp"
        android:layout_height="105dp"
        android:text="PUMP 1"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:background="@color/emerald"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:layout_row="1"
        android:layout_column="0"
        android:onClick="pump1" />

    <Button
        android:layout_width="387dp"
        android:layout_height="105dp"
        android:text="PUMP 2"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.20"
        android:background="@color/emerald"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:layout_row="2"
        android:layout_column="0"
        android:onClick="pump2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:text="ACU"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.20"
        android:background="@color/alizarin"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:layout_row="3"
        android:layout_column="0"
        android:onClick="acu" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="4"
        android:layout_column="0">

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageButton"
            android:layout_weight="0.20"
            android:background="@drawable/list"
            android:layout_gravity="left|bottom"
            android:layout_row="5"
            android:layout_column="0"
            android:onClick="listView" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/graph"
            android:layout_alignBottom="@+id/imageButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="graphView" />

        <ImageButton
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imageButton3"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/settings"
            android:onClick="settings" />

    </RelativeLayout>

</GridLayout>

